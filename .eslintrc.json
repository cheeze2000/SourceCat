{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:solid/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "solid"
  ],
  "rules": {
    "@typescript-eslint/semi": "error",
    "@typescript-eslint/no-unused-vars": "error",
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": "error",
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": "off",
    "quotes": ["error", "double"],
    "solid/reactivity": "off"
  }
}
